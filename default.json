{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "baseBranches": ["main"],
  "rebaseWhen": "conflicted",
  "labels": ["dependencies"],
  "assignees": ["patmoreau"],
  "automergeStrategy": "squash",
  "ignoreTests": false,
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "matchManagers": ["nuget"],
      "matchUpdateTypes": ["major"],
      "matchPackageNames": ["Microsoft.EntityFrameworkCore"],
      "matchCurrentVersion": "^7",
      "enabled": false
    }
  ]
}
