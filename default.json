{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "baseBranches": ["main"],
  "rebaseWhen": "conflicted",
  "labels": ["dependencies"],
  "automerge": true,
  "automergeStrategy": "squash",
  "automergeType": "pr",
  "ignoreTests": false,
  "prConcurrentLimit": 5,
  "requiredStatusChecks": true
}
